<%= stylesheet_link_tag 'form', media: 'all' %>
<div class="container" >
    <%= render 'shared/errors' %>
    <div class="row justify-content-center">
        <div class="col-10">
            <%= form_with model: @article, class: "shadow p-3 mb-5 rounded form-form"  do |f| %>
                <div class="form-group row mt-4">
                    <%= f.label :title, class: "col-2 col-form-label text-dark"%> <br/>
                    <div class="col-10"><%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of Article"%></div>
                </div>

                <br>
                <div class="form-group row">
                    <%= f.label :description, class: "col-2 col-form-label text-dark"%> <br/>
                    <div class="col-10"><%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of Article"%></div>
                </div>
                <br>
                <div class="form-group row justify-content-center">
                    <%= f.submit class: "submit-btn" %>
                </div>
            <% end %>
        </div>
    </div>
</div>
<h5 class="d-flex justify-content-center">
    <%= link_to "[ Cancel and return to articles listing ]", articles_path, class: "text-info text-lg" %>
</h5>
