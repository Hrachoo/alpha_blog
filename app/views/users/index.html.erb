<%= stylesheet_link_tag 'index', media: 'all' %>
<h1 class="text-center mt-4">Alpha Bloggers</h1>

<div class="container">
    <% @users.each do |u| %>
        <div class="row  d-flex justify-content-center ">
            <div class="col-8 mt-4 ">
                <div class="card text-center shadow mb-5 bg-white rounded">
                    <div class="card-header">
                        <%= u.username %> 
                    </div>
                    <div class="card-body">
                        <p class="card-text"><%= truncate(u.email, length: 50) %></p>
                        <%= gravatar_for u %>
                        <%= pluralize(u.articles.count, "article")%> 
                    </div>
                    <div class="container mb-4 d-flex justify-content-center">
                        <ul class="nav nav-tabs card-header-tabs">
                        <li class="nav-item">
                            <%= link_to "View", user_path(u), class: "btn btn-outline-primary mx-1"%>               
                        </li>
                        <li class="nav-item">
                            <%= link_to "Edit", edit_user_path(u), class: "btn btn-outline-info  mx-1"%>                
                        </li>
                        <li class="nav-item">
                        <%= button_to "Delete", user_path(u), class: "btn btn-outline-danger  mx-1", method: :delete, onclick: "return confirm('Are you sure?')" %> 
                        </li>
                        </ul>
                    </div>
                    <div class="card-footer text-muted">
                        <small>Joined <%= time_ago_in_words(u.created_at)%> ago</small>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
</div>
